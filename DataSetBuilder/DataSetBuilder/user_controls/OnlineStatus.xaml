<UserControl x:Class="DataSetBuilder.user_controls.OnlineStatus"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:DataSetBuilder.user_controls"
             mc:Ignorable="d" 
             d:DesignHeight="30" d:DesignWidth="300">
    <Grid>
        <StackPanel Orientation="Horizontal" x:Name="DeviceStatus" Height="30" Width="300">
                <Label x:Name="DeviceName" Content="Nome dispositivo"/>
                <Separator Background="Black" Width="1" Margin="2"/>
                <Ellipse x:Name="StatusLed" Height="15" Width="15" Stroke="Silver" Fill="Red"/>
                <Separator Background="Black" Width="1" Margin="2"/>
                <Label x:Name="DeviceSetup" Content="fileDiSetup.setup"/>
                <Separator Background="Black" Width="1" Margin="2"/>
                <Button x:Name="EditDeviceSetting" Content="Modifica"/>
            </StackPanel>            
    </Grid>
</UserControl>
